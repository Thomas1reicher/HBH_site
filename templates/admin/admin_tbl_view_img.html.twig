{% extends 'admin/admin_master_view.html.twig' %}
   {% block leftsidebaradmin %}
       {% include 'admin/_parts/admin_left_sidebar.html.twig' with {'itemsMenu': itemsMenu} %}
   {% endblock %}
{% block contenuadmin %}
<div>
    <div class="row">
        <div class="col-lg-12 margin-tb">
            <div class="pull-right">
                <a href="{{ path('catAdminAddImg', {name:name , id:id }) }}" class="btn cur-p btn-success">Add Images</a>
            </div>
        </div>
    </div>
    <div class="mT-30">
        <div class="row ">
            <div class="col-md-12">
                <div class="bgc-white bd bdrs-3 p-20">
                    <h4 class="c-grey-900 mB-40">Liste des Images</h4>
                    {% set image = false %}
                    {% set images = false %}
		{%  if(objects is not empty) %}

			<table id="table-liste" class="table table-sortable table-hover table-striped table-bordered table-condensed">
                    <thead><tr>
                        {% for key, variable  in tbl_var%}
                        <td>{{ variable }}</td>
                        
                        {% if variable|slice(0,6) == 'images'%}
                            {% set images = key %}
                         
                        {% elseif variable|slice(0,5) == 'image'%}
                            {% set image = key %}
                        
                        {% endif %}
                        {% endfor %}
                       
                        <td style="text-align: center">Action</td>
                        </tr></thead>
                <tbody id="#sortable">
                {% for key2, object in objects %}
                   <tr>
                        <td><img class="img-admin" src="/assets/images/upload/{{object.nomimg}}"  /></td>
                       <td class="center">
                            <form method="DELETE" action="{{url('catAdminDeleteImg',{'name': name , 'id' : object.id})}}">
                                <button type="submit" class="btn cur-p btn-danger">Supprimer</button>
                            </form>


                            </td>
                           </tr>
                {% endfor %}

                   </tbody>
                    <tfoot>

                    </tfoot>
                    </table>
                    {% endif %}

                </div>
            </div>
        </div>
    </div>

</div>
{% endblock %}
