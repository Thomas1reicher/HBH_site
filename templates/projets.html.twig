{% extends 'base.html.twig' %}
{% block title %}{{title}}{% endblock %}
{% block description %}{{description}}{% endblock %}
{% block body %}
<div class="proj-div">
    <div class="main-div">
        <div class="main-title-page">
            Nos projets
        </div>
        <div class="div-elmt-projet-1">         
            <img class="elmt-projet-1" src="/assets/img/Nos_projets/element-graphic13.svg"/>
        </div>
        <div class="main-div div-key-proj" style="color: #7a7a7ab5">
         <div class="key-proj key-proj-all filtre-actif filtre-proj no-mob" id="All" >
                ALL
            </div>
            <div class="key-proj filtre-proj no-mob" id="Management" >
                MANAGEMENT DE PROJET
            </div>
            
            <div class="key-proj filtre-proj no-mob" id="Sécurité">
                SÉCURITÉ & SANTÉ
            </div>
            <div class="key-proj">
              
            </div>
             <div class="key-proj">
            
            </div>
            <div class="projets-nb key-proj no-mob " >
                {{nb}} PROJETS
            </div>
            <div>
                <select class="no-desktop select-type-proj">
                <option value="filtre">FILTRES </option>
                    <option value="Management">MANAGEMENT DE PROJET </option>
                    <option value="Sécurité">SÉCURITÉ & SANTÉ</option>
    	        </select>
            </div>
        </div>
        <div class="main-div projets-div">
        {% set nb = 1  %}
        {% set nbmult  = 0  %}
           {%  for key , obj in list %}
           
        <a href="{{ path('projet', {id : obj.id  }) }}" >
            <div class="card-actu project-card border-2px-teal-blue filtre-all filtre-{{ obj.typeservice }} card-{{ nb }} {% if key > 9 %} no-mob {% endif %}"  style="background-color: white">
                <div class="slide-img">
                    <img class="hbh-img-slide" style="width: 100%;" src="/assets/images/upload/{{ obj.image }}">
                </div>
                <div class="slide-txt">
                    <div class="cat-slide-txt">{{ obj.typeservice }}</div>
                    
                    <div class="slide-txt-1">{% if obj.titre|length > 35 %} {{ obj.titre | slice(0, 35) }}...  {% else %} {{ obj.titre}} {% endif %} </div>
                </div>
                <div class="div-arrow ">
                    <a><img class="arrow-slide" src="/assets/img/arrow-teal.png"></a>
                </div>
        </div></a>
        {% if key == 9+nbmult %}
               {% set nb = nb+1  %}
                {% set nbmult  = nbmult+10  %} 
            {% endif %}
           {% endfor %}
        </div>
    </div>
    <div class="num-pages no-desktop">
            <img class="first_actif img-control" src="/assets/img/first_actif.svg" />
            <img class="first_inactif img-control" src="/assets/img/first_inactif.svg" />
             <img class="previous_actif img-control" src="/assets/img/previous_actif.svg" />
            <img class="previous_inactif img-control" src="/assets/img/previous_inactif.svg" />
            {% for i in 1..nb %}
                {% if i == 1 %}
                 <p class="num-page-nb actif-num">{{ i }}</p>
                 {% else %}
                <p class="num-page-nb">{{ i }}</p>
                 {% endif %}
            {% endfor %}
            <img class="next_actif img-control" src="/assets/img/next_actif.svg" />
            <img class="next_inactif img-control" src="/assets/img/next_inactif.svg" />
            <img class="last_actif img-control" src="/assets/img/last_actif.svg" />
            <img class="last_inactif img-control" src="/assets/img/last_inactif.svg" />
    </div>
</div>

    <div class="info-projet-div" >
    <div class="div-elmt-projet-2">
        <img class="elmt-projet-2" src="/assets/img/Nos_projets/menons_a_bien_vos_projets.png"/>
    </div>
        <div class="info-projet">
            <div class="div-info">
        <div class="main-title-div" style="color: white">
            <h1 class="title-info-projet">Ensemble, menons à bien vos projets</h1>
        </div>
        <div class="div-btn-info">
            <a href="{{ path('services') }}"><button class="btn-info-service" style="color: #103182;background-color: white;"><span>NOS SERVICES</span></button></a>
            <a href="{{ path('contact') }}"><button class="btn-info-contact" style="color: white;background-color: #103182;border: 1px solid #24a6a4"><span>CONTACTEZ-NOUS</span></button></a>
        </div>
        </div>
    </div>
    </div>
{% endblock %}